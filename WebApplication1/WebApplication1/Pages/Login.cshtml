@page
@model WebApplication1.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-8 col-lg-4">

            <!-- Logo -->
            <div class="text-center mb-4">
                <h1 class="logo mb-3" style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 2.5rem; color: white; font-weight: 700; letter-spacing: -0.5px;">
                    PlayerLink
                </h1>
                <p class="text-white" style="font-size: 0.95rem; font-weight: 500; opacity: 0.9;">
                    Connect with friends and share your moments.
                </p>
            </div>

            <!-- Login Card -->
            <div class="card shadow-sm border-0 p-4" style="background: white; border-radius: 8px;">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- Email Field -->
                    <div class="mb-3">
                        <label class="form-label mb-1" asp-for="Model.Email" style="font-size: 0.9rem; font-weight: 500; color: #262626;">
                            Email Address
                        </label>
                        <input type="text"
                               asp-for="Model.Email"
                               class="form-control custom-input"
                               style="background-color: #fafafa;
                                      border: 1px solid #dbdbdb;
                                      padding: 10px 12px;
                                      font-size: 0.95rem;
                                      border-radius: 4px;" />
                        <span asp-validation-for="Model.Email" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="mb-3">
                        <label class="form-label mb-1" asp-for="Model.Password" style="font-size: 0.9rem; font-weight: 500; color: #262626;">
                            Password
                        </label>
                        <input type="password"
                               asp-for="Model.Password"
                               class="form-control custom-input"
                               style="background-color: #fafafa;
                                      border: 1px solid #dbdbdb;
                                      padding: 10px 12px;
                                      font-size: 0.95rem;
                                      border-radius: 4px;" />
                        <span asp-validation-for="Model.Password" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <!-- Remember Me -->
                    <div class="mb-4 form-check">
                        <input type="checkbox"
                               asp-for="Model.RemeemberMe"
                               class="form-check-input me-2"
                               style="border-color: #dbdbdb;" />
                        <label class="form-check-label" asp-for="Model.RemeemberMe" style="font-size: 0.9rem; color: #666;">
                            Remember Me
                        </label>
                    </div>

                    <!-- Login Button -->
                    <div class="mb-3">
                        <button type="submit"
                                class="btn btn-primary w-100 login-btn"
                                style="background-color: #ff4500;
                                       border: none;
                                       padding: 10px;
                                       font-weight: 600;
                                       font-size: 0.95rem;
                                       border-radius: 8px;">
                            Log In
                        </button>
                    </div>

                    <!-- Forgot Password -->
                    <div class="text-center mt-3">
                        <a href="#" class="text-decoration-none" style="color: #ff4500; font-size: 0.9rem; font-weight: 500;">
                            Forgot password?
                        </a>
                    </div>
                </form>
            </div>

            <!-- Sign Up Link -->
            <div class="card shadow-sm border-0 p-3 mt-3 text-center" style="background: white; border-radius: 8px;">
                <p class="mb-0" style="font-size: 0.95rem; color: #262626;">
                    Don't have an account?
                    <a href="#" class="text-decoration-none fw-semibold" style="color: #ff4500;">
                        Sign up
                    </a>
                </p>
            </div>

        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #ff4500 0%, #ff6347 100%);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
        padding: 20px;
    }

    .container {
        margin-top: 0 !important;
    }

    .logo {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif !important;
        font-weight: 700 !important;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.1);
        letter-spacing: -0.5px;
    }

    .custom-input:focus {
        box-shadow: 0 0 0 2px rgba(255, 69, 0, 0.2);
        border-color: #ff4500 !important;
        background-color: #fff;
    }

    .login-btn {
        transition: all 0.2s ease;
        background-color: #ff4500 !important;
    }

        .login-btn:hover {
            background-color: #e03e00 !important;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(255, 69, 0, 0.3);
        }

    .card {
        border: 1px solid rgba(0,0,0,0.1);
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    }

    /* Remove blue outline on focus for all elements */
    *:focus {
        outline: none !important;
    }

    /* Custom scrollbar */
    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
        background: #ff4500;
        border-radius: 4px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: #e03e00;
        }

    /* Animation for page load */
    .card {
        animation: fadeInUp 0.5s ease;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<script>
    // Add smooth interactions
    document.addEventListener('DOMContentLoaded', function() {
        const inputs = document.querySelectorAll('.custom-input');

        inputs.forEach(input => {
            // Add focus effect
            input.addEventListener('focus', function() {
                this.style.borderColor = '#ff4500';
                this.style.boxShadow = '0 0 0 2px rgba(255, 69, 0, 0.2)';
            });

            input.addEventListener('blur', function() {
                this.style.borderColor = '#dbdbdb';
                this.style.boxShadow = 'none';
            });
        });

        // Add hover effect to links
        const links = document.querySelectorAll('a');
        links.forEach(link => {
            link.addEventListener('mouseenter', function() {
                this.style.opacity = '0.8';
            });
            link.addEventListener('mouseleave', function() {
                this.style.opacity = '1';
            });
        });
    });
</script>